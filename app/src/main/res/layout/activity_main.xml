<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.MainActivity">
    <TextView
            android:text="@string/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:textSize="18sp"
            android:textAllCaps="true" app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="92dp"
            app:layout_constraintHorizontal_bias="0.495"/>
    <android.support.v7.widget.CardView
            android:layout_width="395dp"
            android:layout_height="210dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_marginTop="64dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.0" android:id="@+id/cardView">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="395dp"
                android:layout_height="match_parent" tools:layout_editor_absoluteY="-133dp"
                tools:layout_editor_absoluteX="0dp">
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:layout_marginTop="18dp"
                    android:ems="10"
                    android:id="@+id/ingredients_edit" android:hint="@string/search"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:layout_marginTop="25dp"
                    android:ems="10"
                    android:id="@+id/searchTerm_edit" android:hint="@string/ingredients"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content" android:id="@+id/searchButton"
            app:layout_constraintTop_toBottomOf="@+id/cardView"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:background="@color/colorPrimary" android:text="@string/go"
            android:layout_marginTop="32dp" android:textColor="@android:color/white"
            app:layout_constraintHorizontal_bias="0.498"/>
</android.support.constraint.ConstraintLayout>